<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/overview_list_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/overview_tab_background_selector"
            android:textOn="@string/list_overview"
            android:textOff="@string/list_overview" />

        <ToggleButton
            android:id="@+id/overview_history_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/overview_tab_background_selector"
            android:textOn="@string/list_history"
            android:textOff="@string/list_history" />

    </LinearLayout>

   	<android.support.v4.view.ViewPager
   	    android:id="@+id/overview_pager"
   	    android:layout_width="match_parent"
   	    android:layout_height="0dp"
   	    android:layout_weight="1" >

</android.support.v4.view.ViewPager>
    
</LinearLayout>
